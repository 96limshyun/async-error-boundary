    "devDependencies": {
        "@rollup/plugin-commonjs": "^22.0.2",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@rollup/plugin-typescript": "^8.5.0",
        "@types/react": "^18.3.11",
        "@types/react-dom": "^18.3.1",
        "rollup": "^2.79.2",
        "typescript": "^4.9.5"
    },
    "scripts": {
        "build": "rollup -c",
        "prepare": "npm run build"
    }
