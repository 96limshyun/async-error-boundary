    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "description": "A React error boundary component that captures and handles both synchronous and asynchronous errors, including unhandled promise rejections",
    "author": "seong hyun lim <96limshyun@gmail.com>",
    "repository": {
        "type": "git",
        "url": "https://github.com/96limshyun/async-error-boundary"
